{{> welcome-menu active="login"}}

<section class="section">
  <div class="columns is-vcentered">
    <div class="column">
      <h1 class="title">Log in</h1>
      <form action="/authenticate" method="POST">
        <div class="field">
          <label class="label">Email</label> <input class="input" type="text" placeholder="Enter email" name="email">
        </div>
        <div class="field">
          <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
        </div>
        <div class="field is-grouped">
          <div class="buttons">
            <button class="button is-link">Login</button>
            <a id="github-login" class="button" href="/oauth"> <span class="icon is-small"> <i class="fab fa-github"></i> </span> <span>Login with Github</span> </a>
          </div>
        </div>
      </form>
      </div>
      <div class="column">
        <figure class="image is-2by1">
          <img src="images/vineyard-1.jpg">
        </figure>
      </div>
  </div>
</section>